<% if session[:user_id] %>
  <h1>Welcome <%=User.find(session[:user_id]).username%> <a href="/sign-out">Sign-Out</a></h1>
<% else %>
  <form method="POST" action="/sign-in">
    <label for="username">Username</label>
    <input type="text" name="username">
    <label for="password">Password</label>
    <input type="text" name="password">
    <button type="submit">Go!</button>
  </form>
<% end %>
<h1><%=@user.username%>'s Profile Page <a href="/sign-out">Sign-Out</a></h1>
<h2>About:</h2>
<p><strong>Email:</strong> <%=@user.email%></p>
<p><strong>Description:</strong> <%=@user.description%></p>
<img src=<%=@user.pic%>>
<h2>Posts</h2>
<ul>
	<% @user.posts.each do |post| %>
		<a href=<%=post.url%>><h2><%= post.title%></h2></a>
		<p><%=post.body%></p>
      	<ul>
        	<% post.comments.each do |comment| %>
         		 <li>
            		<p><strong><%=comment.user.username%></strong></p>
           			 <p><%=comment.body%></p>
          		</li>
        	<% end %>
      	</ul>
	<% end %>
</ul>
<hr>
<h2>This page should have:</h2>
<ul>
	<li>User's Profile Information</li>
	<li>Link to edit/delete profile if signed in</li>
	<li>List of User's Posts</li>
	<li>Option to edit posts if signed in</li>
	<li>Form to create post if signed in</li>
</ul>