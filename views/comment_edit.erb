<h2><a href=<%=@post.url%>><%= @post.title%></a></h2>
<p><a href="/profile/<%=@post.user.id%>"><strong><%=@post.user.username%></strong></a></p>
<p><%=@post.body%></p>
<p><strong>Tag: </strong><%=@post.tag.name%></p>
<ul>
  <% @post.comments.each do |comment| %>
    <li>
    	<% if comment.id == @comment.id %>
			<form method="post" action="/comment/<%=@comment.id%>/edit">
			  <textarea name="body" rows="4" cols="50" Placeholder="Comment"><%=@comment.body%></textarea>
			  <button type="submit">Post!</button>
			</form>
    	<% else %>
			<p><strong><%=comment.user.username%></strong></p>
			<p><%=comment.body%></p>
       	<% end %>
    </li>
  <% end %>
</ul>